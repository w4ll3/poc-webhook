html
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css')
  head
    title='Verifier'
  body.h-full.flex.flex-col.justify-center.items-center
    div.p-20.rounded(class='w-1/3 h-2/3' style="background-color: rgb(46, 51, 56)")
      p.text-center.text-white Paste your credential
      form.flex.flex-col.h-full.text-white(method='post' action='api/validate')
        textarea.text-black.flex-grow.my-4.rounded(name="credential", cols="30", rows="10")
        input.my-4.p-2(type='submit' value='Submit' style="background-color: rgb(53, 208, 127)")
